<ul>
<% @tasks.each do |task| %>
  <li><%= task.description %> <small><%= task.completed %></small><%= link_to "Delete", task_path(task), method: :DELETE %></li>
<% end %>
</ul>
<body>

  <span id="tasks-display">
    <h1>Checklist</h1>
  </span>

  <section class="content-left">
    <aside>
      <div class='side-items'>
        <p><%= link_to "New Task", new_task_path %></p>
        <p>Save changes</p>
        <p class="read-more">Welcome Admin</p>
      </div>
    </aside>

    <article>
      <h2>Currently working on</h2>
      <div class="open-list">
      </div>

      <hr class="line" />

      <h2>Completed</h2>
      <div class="close-list">
      </div>
    </article>

  </section>

</body>
